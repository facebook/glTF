{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "KHR_audio_graph Emitter Node",
    "type": "object",
    "description": "Emitter node acting as a 1-in/0-out sink; for spatial emitters, 3D properties are provided via spatialProperties.",
    "allOf": [
        {
            "$ref": "glTFProperty.schema.json"
        }
    ],
    "properties": {
        
        "emitterType": {
            "type": "string",
            "description": "Emitter type (global, spatial).",
            "enum": [
                "global",
                "spatial"
            ]
        },
        "gain": {
            "type": "number",
            "description": "Gain applied to the signal by the emitter (linear [0..1]).",
            "minimum": 0,
            "maximum": 1,
            "default": 1
        },
        "spatialProperties": {
            "type": "object",
            "description": "See 5.2 Spatial properties.",
            "$ref": "KHR_audio_graph.spatial.schema.json"
        },
        "extensions": {},
        "extras": {}
    },
    "required": [
        "emitterType",
        "gain"
    ],
    "definitions": {
        "SpatialProperties": {
            "type": "object",
            "description": "See 5.2 Spatial properties."
        }
    }
}
